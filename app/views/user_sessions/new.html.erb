<div class="login-form">
<h1>Login</h1>

  <%= form_tag user_sessions_path, method: :post do %>
    <div class="field">
      <%= label_tag :email %></br>
      <%= text_field_tag :email, nil, class: "form_input" %>
      <br/>
    </div>
    <div class="field">
      <%= label_tag :password %></br>
      <%= password_field_tag :password, nil, class: "form_input" %>
      <br/>
    </div>
    <div class="actions">
      <%= submit_tag "Login", class: "button" %>
    </div>
  <% end %>
  
  <%= link_to 'Back', products_path %>
  </br>

</div>