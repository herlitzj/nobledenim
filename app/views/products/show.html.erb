<div id="product_image" class="col-md-6">
  <% product=@product.image_url %>
  <%= image_tag("products/#{product}") %>
</div>

<div id="product_description" class="col-md-6">
  <h3>
    <%= @product.title %>
  </h3>
  
  <h3>
    <%= print_price(@product.price) %>
  </h3>
  
  <p>
    <%= @product.description %>
  </p>
  
  <%= button_to "Add to Cart", order_items_path(product_id: @product.id) %>
  </br>
  <%= link_to 'Back', products_path %>
  <% if logged_in? %>
  <%= link_to 'Edit', edit_product_path(@product) %>
  <% end %>
</div>



